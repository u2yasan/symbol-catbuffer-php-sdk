{
  "name": "newecosym/symbol-php-sdk",
  "description": "Symbol PHP SDK (PHP ^8.3).",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": { "SymbolSdk\\": "src/" }
  },
  "autoload-dev": {
    "psr-4": {
      "SymbolSdk\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=8.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^10",
    "phpstan/phpstan": "^2.1",
    "phpstan/extension-installer": "^1.4",
    "phpstan/phpstan-phpunit": "^2.0",
    "phpstan/phpstan-strict-rules": "^2.0",
    "friendsofphp/php-cs-fixer": "^3.87",
    "rector/rector": "^2.1",
    "infection/infection": "^0.31.2",
    "phpunit/phpcov": "^9.0",
    "vlucas/phpdotenv": "^5.6"
  },
  "scripts": {
    "analyse": "phpstan analyse",
    "test": "phpunit --colors=always",
    "fix:cs": "php-cs-fixer fix --ansi",
    "check:cs": "php-cs-fixer fix --dry-run --diff --ansi",
    "ci": "composer validate --strict && composer check:cs && composer analyse && composer test"
  },
  "config": {
    "allow-plugins": {
      "infection/extension-installer": true,
      "phpstan/extension-installer": true
    }
  }
}
